<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="10dp">

    <EditText
        android:id="@+id/update_toko_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Nama Toko"
        android:inputType="textPersonName"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/update_toko_alamat"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Alamat Toko"
        android:inputType="text"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/update_toko_name" />

    <EditText
        android:id="@+id/update_toko_notelp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="No Telp Toko"
        android:inputType="text"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/update_toko_alamat" />

    <Button
        android:id="@+id/fragment_toko_updateButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Update"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/fragment_toko_updateCancelButton"
        app:layout_constraintTop_toBottomOf="@+id/update_toko_notelp" />

    <Button
        android:id="@+id/fragment_toko_updateCancelButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Cancel"
        app:layout_constraintLeft_toRightOf="@+id/fragment_toko_updateButton"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/update_toko_notelp" />

</android.support.constraint.ConstraintLayout>
